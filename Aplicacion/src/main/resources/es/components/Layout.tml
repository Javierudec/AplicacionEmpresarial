<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"  xmlns:p="tapestry:parameter">
    <head>
    	<link href="layout/layout.css" rel="stylesheet" type="text/css"/>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>MoviesDB</title>
    </head>

    <body>
        <!-- start header -->
        <div id="header">
            <div id="logo">
                <h1>
                    <t:pagelink page="index">MoviesDB</t:pagelink>
                </h1>
            </div>
            <div id="loginPannel">
            	<t:if test="username">
            		<img src="images/silhouette.png" alt="Avatar"></img>
            		<t:actionLink t:id="viewUserProfile">Profile</t:actionLink>|
            		<t:actionLink t:id="logout">Logout</t:actionLink>
            		<br/>
					(Welcome, ${username})
					<p:else>
						<img src="images/silhouette.png" alt="Avatar"></img>
						
						<div style="float:right;padding-right:5px;">
							<form t:type="form" t:id="loginForm">
								<t:errors/>
								<t:Label t:for="loginUsername">Username</t:Label><input t:type="Textfield" t:id="loginUsername" t:validate="required" size="12"/><br/>
								<t:Label t:for="loginPassword">Password</t:Label><input t:type="PasswordField" t:id="loginPassword" t:validate="required" size="12"/><br/>
								<input type="submit" value="Login"/>
							</form>
						</div>
						<div style="float:right;clear:right;padding-right:5px;">
							<t:pagelink page="AccountCreation">Create Account</t:pagelink>
						</div>
						<br/>
					</p:else>
				</t:if>
            </div>
            <div id="searchBar">
            	<form>
            		<input type="textfield" size="130" value="Buscar..." />
            		<input type="submit" value="Go!"/>
            	</form>
            </div>
        </div>
        <div id="menu">
        	<ul>
                <li t:type="loop" source="pageNames" value="pageName" class="prop:classForPageName">
            	    <t:pagelink page="prop:pageName">${pageName}</t:pagelink>
        	    </li>
        	</ul>
        </div>
        <!-- end header -->
        
        <!-- start page -->
        <div id="page">
            <!-- start sidebar
            <div id="sidebar">
                <ul>
                    <li id="search" style="background: none;">
                    </li>
                    <li t:type="if" test="sidebar">
                        <h2>${sidebarTitle}</h2>
                        <div class="sidebar-content">
                            <t:delegate to="sidebar"/>
                        </div>
                    </li>
                </ul>
            </div>
            end sidebar -->
            <!-- start content -->
            <div id="content">
                <div class="post">
                    <div class="title">
                        <!--  <h2>${title}</h2> -->
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        
        
        <!-- start footer -->
        <div id="footer">
            <p class="legal">
				Footer
            </p>
        </div>
        <!-- end footer -->
    </body>
</html>