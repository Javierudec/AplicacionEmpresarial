<div id="widgetContainer">
	<div id="upperWidgetContainer">			
		<div id="recommenderWidget">
			RecommenderWidget
		</div>
		<div id="newMoviesWidget">
			<h1>Movies</h1>
			<ul>
				<t:Loop t:source="lastMovies" value="movieName">
					<li><t:actionLink t:id="viewProfile" t:context="movieName.name">${movieName.name} (${movieScore}/5)</t:actionLink></li>
				</t:Loop>
			</ul>
		</div>
	</div>
		
	<div id="lowerWidgetContainer">
		<div id="recommededTagForSearch">
			<h1>Tags</h1>
			<ul>
				<t:Loop t:source="tags" value="tag">
					<li><t:actionLink t:id="viewSearch" t:context="tag">${tag}</t:actionLink></li>
				</t:Loop>
			</ul>
		</div>
		<div id="randomNews">
			RandomNews
		</div>
	</div>			
</div>
 
